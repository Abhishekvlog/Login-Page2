<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="60sp"
        android:background="#0583EA"
        />
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_white"
        android:layout_margin="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/arrow"
        android:layout_marginStart="45sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view1"
        android:layout_marginTop="110sp"
        android:layout_marginStart="47sp"/>
    <View
        android:id="@+id/view2"
        android:layout_width="337sp"
        android:layout_height="1sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:background="#3A3642"
        android:layout_marginTop="10sp"
        android:layout_marginStart="37sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2"
            android:layout_marginTop="40sp"
            android:layout_marginStart="47sp"/>
    <View
        android:id="@+id/view3"
        android:layout_width="337sp"
        android:layout_height="1sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:background="#3A3642"
        android:layout_marginTop="70sp"
        android:layout_marginStart="37sp"/>
    <TextView
        android:id="@+id/use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USE PHONE NUMBER"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        android:layout_marginTop="40sp"
        android:layout_marginStart="130sp"
        android:textColor="#0583EA"/>
        <Button
            android:id="@+id/btn1"
            android:layout_width="339sp"
            android:layout_height="51sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/use"
            android:text="Login"
            android:textColor="@color/white"
            android:background="#858992"
            android:layout_marginStart="44sp"
            android:layout_marginTop="80sp"/>
    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        android:layout_marginTop="20sp"
        android:layout_marginStart="160sp"
        android:textColor="#0583EA"/>
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgot"
        android:layout_marginTop="40sp"
        android:layout_marginStart="210sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/view4"
        android:layout_width="339sp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="CONTINUE WITH FACEBOOK"
        android:drawableStart="@drawable/ic_ion_logo_facebook"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/or"
        android:layout_marginTop="50sp"
        android:layout_marginStart="43sp"
        android:layout_height="60sp"
        android:background="#3B5998"
        android:width="1dp"
        />

    <Button
        android:id="@+id/view5"
        android:layout_width="339sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:text="CONTINUE WITH GOOGLE"
        android:drawableStart="@drawable/ic_flat_color_icons_google"
        android:layout_marginTop="20sp"
        android:layout_marginStart="43sp"
        android:layout_height="60sp"
        android:background="@color/white"
        android:width="1dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>